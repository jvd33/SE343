@model KennUTicket.Models.Script

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Global Settings</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Troubleshooting Script</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.Label("Script Text", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ScriptText, 10, 40, new { htmlAttributes = new { @class = "form-control", style="width:100%; max-width:100%;" } })
                @Html.ValidationMessageFor(model => model.ScriptText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Set Script" class="btn btn-default" />
            </div>
        </div>
    </div>
}
