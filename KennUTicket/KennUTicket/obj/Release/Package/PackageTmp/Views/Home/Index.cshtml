@functions {
    private bool loggedIn = false;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@using Microsoft.AspNet.Identity.Owin
@using Microsoft.Owin.Security
@using KennUTicket.Models
@using KennUTicket.DAL
@using System.Web
@{
    loggedIn = User.Identity.IsAuthenticated;

}
<div class="jumbotron" style="text-align:center">
    <h1>Welcome to KennUTicket!</h1>
    <p>KennUWare's Premiere Customer Support Ticketing System</p>
    <div class="row text-center">
        @if (loggedIn)
        {
            <span>Welcome, @User.Identity.GetUserName()</span>
        }
        else
        {
        <a href="/Users/Login" class="btn btn-primary btn-lg" style="text-align:center">Login</a>
        }
    </div>

</div>